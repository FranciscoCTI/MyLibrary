<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:themes="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero2">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="ColorStyles.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!--Label-->
    <Style TargetType="{x:Type Label}" x:Key="Fc.Label.Cascadia.15">
        <Setter Property="FontFamily" Value="Cascadia Code"/>
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="VerticalAlignment" Value="Center"></Setter>
        <Setter Property="FontWeight" Value="Normal"></Setter>
    </Style>

    <Style x:Key="Fc.Label.Cascadia.15.Bold" TargetType="{x:Type Label}" BasedOn="{StaticResource Fc.Label.Cascadia.15}">
        <Setter Property="FontWeight" Value="Bold"></Setter>
    </Style>

    <Style x:Key="Fc.Label.Cascadia.25.Bold" TargetType="{x:Type Label}">
        <Setter Property="FontFamily" Value="Cascadia Code"/>
        <Setter Property="FontWeight" Value="Bold"></Setter>
        <Setter Property="FontSize" Value="25"/>
    </Style>

    <!--ComboBox-->
    <Style x:Key="Fc.Style.ComboBox" TargetType="{x:Type ComboBox}">
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="BorderBrush" Value="GreenYellow"/>
        <Setter Property="FontFamily" Value="Cascadia Code"/>
        <Setter Property="FontSize" Value="15"/>
    </Style>

    <!--Button-->
    <Style TargetType="Button" x:Key="Fc.Style.Button">
        <Setter Property="BorderThickness" Value="2,2,2,2"/>
        <Setter Property="BorderBrush" Value="{StaticResource Fc.BlackBrush}"/>
        <Setter Property="FontFamily" Value="Cascadia Code"></Setter>
    </Style>

    <!--Datagrid header style-->
    <Style x:Key="Fc.Style.Datagrid.Header" TargetType="DataGridColumnHeader">
        <Setter Property="FontFamily" Value="Cascadia Code"/>
        <Setter Property="FontSize" Value="15"/>
    </Style>

    <!--Border style-->
    <Style x:Key="Fc.Style.Border" TargetType="Border">
          <Setter Property="BorderThickness" Value="1"/>
          <Setter Property="BorderBrush" Value="{StaticResource Fc.BlackBrush}"/>
          <Setter Property="Margin" Value="5"/>
    </Style>

    <!--TextBox style-->
    <Style x:Key="Fc.Style.TextBox" TargetType="TextBox">
        <Setter Property="FontFamily" Value="Cascadia Code"/>
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="FontStretch" Value="Normal"></Setter>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="BorderThickness" Value="2"></Setter>
    </Style>
</ResourceDictionary>